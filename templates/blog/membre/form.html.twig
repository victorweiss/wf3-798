{% extends "base.html.twig" %}

{% block title %}
    {{ new ? 'Nouvel article' : article.title }}
{% endblock %}

{% block body %}

    <a href="{{ path('membre_blog_list') }}"><-- Retour</a>

    <div>
        <img src="{{ asset(article.imagePath) }}" alt="" style="width: 200px;">
    </div>

    {% if new %}
        <h1>Cr√©er un nouvel article</h1>
    {% else %}
        <h1>Modifier un article</h1>
        <div class="lead">{{ article.title }}</div>
    {% endif %}

    {{ form(form) }}

    {% if is_granted(constant('App\\Security\\Voter\\ArticleVoter::DELETE'), article) %}
        <a href="{{ path('membre_blog_remove', {id: article.id}) }}" class="btn btn-danger">Supprimer</a>
    {% endif %}

{% endblock %}

