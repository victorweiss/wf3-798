{% extends 'base.html.twig' %}

{% block title %}
    Contact pro
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 mx-auto">

            <div class="text-center">
                <h1>Contact PRO</h1>
                <div class="lead">Nous r√©pondons sous 48h</div>
            </div>

            {{ form_start(form) }}

            <div class="row mt-3">
                <div class="col-md-6">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.lastname) }}
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    {{ form_row(form.company) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.email) }}
                </div>
            </div>

            <div class="mt-3">
                {{ form_row(form.subject) }}
            </div>

            <div class="row">
                <div class="col-md-3">
                    {{ form_label(form.message) }}
                </div>
                <div class="col-md-9">
                    {{ form_widget(form.message) }}
                </div>
            </div>

            <div class="mt-3">
                {{ form_row(form.submit) }}
            </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
